<%= turbo_frame_tag "area_tags_turbo_stream" do %>
  <div class="row bg-info mb-3">
    <% @area_tags.each_with_index do |tag, index| %>
      <div class="form-check form-check-inline col-3">
        <input class="form-check-input" type="checkbox" name="area_tags[]" id="box<%= index %>" value="<%= tag.name %>">
        <label class="form-check-label" for="box<%= index %>">
          <%= tag.name %> (<%= tag.count %>)
        </label>
      </div>
    <% end %>

    <%= turbo_frame_tag "replace_area_tags" do %>
      <%= link_to '追加する', replace_area_tags_tags_path %>
    <% end %>
  </div>
<% end %>