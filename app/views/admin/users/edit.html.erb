<% content_for(:title, t(".page_title")) %>


<div class="container min-vh-100 bg-danger-subtle">
  <div class="row">
    <h2>管理ページ / ユーザー編集</h2>
    <h1>ユーザー名：<%= @user.name %></h1>

    <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="mb-3">
        <%= f.label :email, t("users.edit.email_required"), class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="mt-3">
        <%= f.submit t("helpers.submit.change"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to "ユーザー一覧", admin_users_path %>
    <%= link_to "管理ページトップへ", admin_homes_path %>
  </div>
</div>