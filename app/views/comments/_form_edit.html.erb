<div class="row mt-3 p-2 bg-secondary-subtle" id="comment-<%= comment.id %>">
  <%= form_with(model: comment, url: comment_path(comment), method: :patch) do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <%= f.label :body, t("comment.comment_edit") %>
    <%= f.text_area :body, class: "form-control mb-3" %>
    <%= link_to t("helpers.submit.cancel"), edit_cancel_comment_path(comment), class: "btn btn-primary" %>
    <%= f.submit nil, class: "btn btn-primary" %>
  <% end %>
</div>