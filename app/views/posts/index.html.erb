<div class="container">
<div class="row">
<h1>全記事一覧</h1>
<% @posts.each do |post| %>
<div class="container">
<div class="row">
<%= post.title %>
<%= post.source %>
<%= post.store_url %>
<%= post.dish.present? ? post.dish.introduction : '後で修正' %>
<%= post.dish.present? ? post.dish.description : '後で修正' %>
</div>
</div>
<% end %>
</div>
</div>

<div class="container">
<div class="row">
<h1>あなたの記事一覧</h1>
<% @user_posts.each do |post| %>
<div class="container">
<div class="row">
<%= post.title %>
<%= post.source %>
<%= post.store_url %>
<%= post.dish.present? ? post.dish.introduction : '後で修正' %>
<%= post.dish.present? ? post.dish.description : '後で修正' %>
</div>
</div>
<% end %>
</div>
</div>