<% breadcrumb :post_show, @post, @area_tags, @genre_tags, @taste_tags, @outher_tags, @user, @playlist, @post_path %>
<%# パンくずリスト呼ぶとき選択したタグ情報を保持する %>

<div class="container">
<div class="row">
<%= @post.title %>
</div>

<% @user_playlists.each do |p| %>
  <%= p.title %>
<% end %>



<%= form_with(url: add_to_playlist_post_path(@post), method: :post) do %>
    <%= label_tag :playlist_id, "選択" %>
    <%= select_tag :playlist_id, options_from_collection_for_select(@user_playlists, :id, :title), include_blank: true %>
    <%= submit_tag "選択" %>
<% end %>




    <!-- モーダルを開くボタン・リンク -->
    <div class="container">
        <div class="row mb-5">
            <div class="col-2">
                <button type="button" class="btn btn-primary mb-12" data-toggle="modal" data-target="#testModal">ボタンで開く</button>
            </div>
        </div>
    </div>

    <!-- ボタン・リンククリック後に表示される画面の内容 -->
    <div class="modal fade" id="testModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4><div class="modal-title" id="myModalLabel">@プレイリスト選択</h4>
                </div>
                <div class="modal-body">



                    <label>データを削除しますか？</label>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@閉じる</button>
                    <button type="button" class="btn btn-danger">@追加</button>
                </div>
            </div>
        </div>
    </div>




<div class="row">
<% @post.area_tags.each do |area_tag| %>
<%= area_tag.name %>
<% end %>
<% @post.genre_tags.each do |genre_tag| %>
<%= genre_tag.name %>
<% end %>
<% @post.taste_tags.each do |taste_tag| %>
<%= taste_tag.name %>
<% end %>
<% @post.outher_tags.each do |outher_tag| %>
<%= outher_tag.name %>
<% end %>
</div>

<div class="row d-flex">
<span>投稿者: <%= link_to @user.name, user_path(@user) %></span>
</div>

<div class="row">
<% if @post.source.present? %>
<%= @post.user.name %>
出典: <%= @post.source %>
<% end %>
</div>

<div class="row">
<% if @post.store_url.present? %>
店舗情報: <%= @post.store_url %>
<% end %>
</div>

<div class="row">
<% if @post.images.attached? %>
  <% @post.images.each do |image| %>
    <%= image_tag image %>
  <% end %>
<% end %>
</div>
<div class="row">
<%= @post.dish.description %>
</div>

</div>